#cloud-config

write_files:
  - path: /etc/weave-01.env
    permissions: 0644
    owner: root
    content: |
      WEAVE_LAUCH_ARGS=""
      BRIDGE_ADDRESS="10.9.1.1/24"
      BREAKOUT_ROUTE="10.9.0.0/16"
      CONTAINER_INTERFACE="eth0"
      PINGER_REMOTE="10.9.2.3"
      GREATER_MESSAGE="Hello from #1"

  - path: /etc/weave-02.env
    permissions: 0644
    owner: root
    content: |
      WEAVE_LAUCH_ARGS="172.17.8.101"
      BRIDGE_ADDRESS="10.9.2.1/24"
      BREAKOUT_ROUTE="10.9.0.0/16"
      CONTAINER_INTERFACE="eth0"
      PINGER_REMOTE="10.9.3.3"
      GREATER_MESSAGE="Hello from #1"

  - path: /etc/weave-03.env
    permissions: 0644
    owner: root
    content: |
      WEAVE_LAUCH_ARGS="172.17.8.101"
      BRIDGE_ADDRESS="10.9.3.1/24"
      BREAKOUT_ROUTE="10.9.0.0/16"
      CONTAINER_INTERFACE="eth0"
      PINGER_REMOTE="10.9.1.3"
      GREATER_MESSAGE="Hello from #1"

coreos:
  update:
    group: alpha
    reboot-strategy: off
  etcd:
    # generate a new token for each unique cluster from https://discovery.etcd.io/new
    # WARNING: replace each time you 'vagrant destroy'
    #discovery: https://discovery.etcd.io/<token>
    addr: $public_ipv4:4001
    bind-addr: 0.0.0.0
    peer-addr: $public_ipv4:7001
    peer-heartbeat-interval: 250
    peer-election-timeout: 1000
  fleet:
    public-ip: $public_ipv4
  units:
    - name: etcd.service
      command: start
    - name: 10-weave.network
      runtime: false
      content: |
        [Match]
        Type=bridge
        Name=weave*

        [Network]

    - name: install-weave.service
      command: start
      enable: true
      content: |
        [Unit]
        After=network-online.target
        Description=Install Weave
        Documentation=http://zettio.github.io/weave/
        Requires=network-online.target

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStartPre=/usr/bin/wget -N -P /opt/bin https://gist.githubusercontent.com/errordeveloper/146ec24357d39d42b83f/raw/weave
        ExecStartPre=/usr/bin/wget -N -P /opt/bin https://gist.githubusercontent.com/errordeveloper/146ec24357d39d42b83f/raw/weave-helper
        ExecStartPre=/usr/bin/chmod +x /opt/bin/weave
        ExecStartPre=/usr/bin/chmod +x /opt/bin/weave-helper
        ExecStart=/bin/echo Wave Installed

    - name: weave-helper.service
      command: start
      enable: true
      content: |
        [Unit]
        After=install-weave.service
        After=docker.service
        Description=Weave Network Router
        Documentation=http://zettio.github.io/weave/
        Requires=docker.service
        Requires=install-weave.service

        [Service]
        EnvironmentFile=/etc/%H.env
        ExecStart=/opt/bin/weave-helper $CONTAINER_INTERFACE $BREAKOUT_ROUTE

    - name: weave.service
      command: start
      enable: true
      content: |
        [Unit]
        After=install-weave.service
        After=docker.service
        Description=Weave Network Router
        Documentation=http://zettio.github.io/weave/
        Requires=docker.service
        Requires=install-weave.service

        [Service]
        EnvironmentFile=/etc/%H.env
        ExecStartPre=/usr/bin/docker pull zettio/weave:latest
        ExecStartPre=/opt/bin/weave launch $WEAVE_LAUCH_ARGS
        ExecStart=/usr/bin/docker logs -f weave
        SuccessExitStatus=2
        ExecStop=/opt/bin/weave stop

    - name: weave-helper.service
      command: start
      enable: true
      content: |
        [Unit]
        After=install-weave.service
        After=docker.service

        [Service]
        EnvironmentFile=/etc/%H.env
        ExecStart=/opt/bin/weave-helper $CONTAINER_INTERFACE $BREAKOUT_ROUTE

    - name: install-busybox.service
      command: start
      enable: true
      content: |
        [Unit]
        After=docker.service
        Description=Install BusyBox
        Documentation=http://zettio.github.io/weave/
        Requires=docker.service

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/usr/bin/docker pull busybox:latest

    - name: pinger.service
      command: start
      enable: true
      content: |
        [Unit]
        After=weave.service
        After=weave-helper.service
        After=install-busybox.service
        After=docker.service
        Description=Weave Network Test Monitor
        Documentation=http://zettio.github.io/weave/
        Requires=weave.service
        Requires=weave-helper.service
        Requires=install-busybox.service
        Requires=docker.service

        [Service]
        EnvironmentFile=/etc/%H.env
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/usr/bin/docker \
          run -t -i \
          --name=pinger busybox:latest \
          ping $PINGER_REMOTE

    - name: greater.service
      command: start
      enable: true
      content: |
        [Unit]
        After=weave.service 
        After=weave-helper.service
        After=install-busybox.service
        After=docker.service
        Description=Weave Network Test Service
        Documentation=http://zettio.github.io/weave/
        Requires=weave.service
        Requires=weave-helper.service
        Requires=install-busybox.service
        Requires=docker.service

        [Service]
        EnvironmentFile=/etc/%H.env
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/usr/bin/docker \
          run -t -i \
          --name=greater busybox:latest \
          nc -ll -p 2000 0.0.0.0 -e /bin/echo $GREATER_MESSAGE

    - name: tester.service
      command: start
      enable: true
      content: |
        [Unit]
        After=weave.service
        After=weave-helper.service
        After=install-busybox.service
        After=docker.service
        Description=Weave Network Test
        Documentation=http://zettio.github.io/weave/
        Requires=weave.service
        Requires=weave-helper.service
        Requires=install-busybox.service
        Requires=docker.service

        [Service]
        EnvironmentFile=/etc/%H.env
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/usr/bin/docker \
          run -t -i \
          --name=tester -d busybox:latest

    - name: docker.service
      command: start
      content: |
        [Unit]
        After=network.target
        After=install-weave.service
        Description=Docker Application Container Engine
        Documentation=http://docs.docker.io
        Requires=install-weave.service

        [Service]
        EnvironmentFile=/etc/%H.env
        ExecStartPre=/bin/mount --make-rprivate /
        ExecStartPre=/opt/bin/weave setup
        ExecStartPre=/usr/bin/ip addr add dev weave $BRIDGE_ADDRESS
        ExecStart=/usr/bin/docker --daemon --storage-driver=btrfs -H fd:// --bridge=weave

        [Install]
        WantedBy=multi-user.target

    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the AP

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    ## based on: https://github.com/kelseyhightower/kubernetes-coreos/blob/e16f8ac/configs/master.yml
    - name: download-kubernetes.service
      command: start
      content: |
        [Unit]
        After=network-online.target
        Before=apiserver.service
        Before=controller-manager.service
        Before=kubelet.service
        Before=proxy.service
        Description=Download Kubernetes Binaries
        Documentation=https://github.com/GoogleCloudPlatform/kubernetes
        Requires=network-online.target

        [Service]
        ExecStart=/usr/bin/wget -N -P /opt/bin http://storage.googleapis.com/kubernetes/apiserver
        ExecStart=/usr/bin/wget -N -P /opt/bin http://storage.googleapis.com/kubernetes/controller-manager
        ExecStart=/usr/bin/wget -N -P /opt/bin http://storage.googleapis.com/kubernetes/kubecfg
        ExecStart=/usr/bin/wget -N -P /opt/bin http://storage.googleapis.com/kubernetes/kubelet
        ExecStart=/usr/bin/wget -N -P /opt/bin http://storage.googleapis.com/kubernetes/proxy
        ExecStart=/usr/bin/wget -N -P /opt/bin http://storage.googleapis.com/kubernetes/scheduler
        ExecStart=/usr/bin/chmod +x /opt/bin/apiserver
        ExecStart=/usr/bin/chmod +x /opt/bin/controller-manager
        ExecStart=/usr/bin/chmod +x /opt/bin/kubecfg
        ExecStart=/usr/bin/chmod +x /opt/bin/kubelet
        ExecStart=/usr/bin/chmod +x /opt/bin/proxy
        ExecStart=/usr/bin/chmod +x /opt/bin/scheduler
        RemainAfterExit=yes
        Type=oneshot
    - name: apiserver.service
      command: start
      content: |
        [Unit]
        After=etcd.service
        After=download-kubernetes.service
        ConditionFileIsExecutable=/opt/bin/apiserver
        Description=Kubernetes API Server
        Documentation=https://github.com/GoogleCloudPlatform/kubernetes
        Wants=etcd.service
        Wants=download-kubernetes.service

        [Service]
        ExecStartPre=/bin/test %H = weave-01
        ExecStart=/opt/bin/apiserver \
        --address=0.0.0.0 \
        --port=8080 \
        --etcd_servers=http://127.0.0.1:4001 \
        --machines=172.17.8.101,172.17.8.102,172.17.8.103 \
        --logtostderr=true -v=3
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
    - name: scheduler.service
      command: start
      content: |
        [Unit]
        After=apiserver.service
        After=download-kubernetes.service
        ConditionFileIsExecutable=/opt/bin/scheduler
        Description=Kubernetes Scheduler
        Documentation=https://github.com/GoogleCloudPlatform/kubernetes
        Wants=apiserver.service

        [Service]
        ExecStartPre=/bin/test %H = weave-01
        ExecStart=/opt/bin/scheduler \
        --logtostderr=true \
        --master=127.0.0.1:8080
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
    - name: controller-manager.service
      command: start
      content: |
        [Unit]
        After=etcd.service
        After=download-kubernetes.service
        ConditionFileIsExecutable=/opt/bin/controller-manager
        Description=Kubernetes Controller Manager
        Documentation=https://github.com/GoogleCloudPlatform/kubernetes
        Wants=etcd.service
        Wants=download-kubernetes.service

        [Service]
        ExecStartPre=/bin/test %H = weave-01
        ExecStart=/opt/bin/controller-manager \
        --master=127.0.0.1:8080 \
        --logtostderr=true
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
    - name: kubelet.service
      command: start
      content: |
        [Unit]
        After=etcd.service
        After=download-kubernetes.service
        ConditionFileIsExecutable=/opt/bin/kubelet
        Description=Kubernetes Kubelet
        Documentation=https://github.com/GoogleCloudPlatform/kubernetes
        Wants=etcd.service
        Wants=download-kubernetes.service

        [Service]
        ExecStart=/opt/bin/kubelet \
        --address=0.0.0.0 \
        --port=10250 \
        --hostname_override=$public_ipv4 \
        --etcd_servers=http://127.0.0.1:4001 \
        --logtostderr=true
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
    - name: proxy.service
      command: start
      content: |
        [Unit]
        After=etcd.service
        After=download-kubernetes.service
        ConditionFileIsExecutable=/opt/bin/proxy
        Description=Kubernetes Proxy
        Documentation=https://github.com/GoogleCloudPlatform/kubernetes
        Wants=etcd.service
        Wants=download-kubernetes.service

        [Service]
        ExecStart=/opt/bin/proxy --etcd_servers=http://127.0.0.1:4001 --logtostderr=true
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
